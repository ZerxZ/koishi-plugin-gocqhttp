{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
  ]
}
